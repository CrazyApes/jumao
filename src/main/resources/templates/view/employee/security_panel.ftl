<div class="row">
    <div class="col-md-6 col-xs-12">
        <div class="form-group">
            <label for="password">
                账户密码
                <i class="fa fa-question-circle i-tooltip hidden-xs" data-toggle="tooltip"
                   data-content="只能输入英文字母、数字，长度在6~20位之间，不能和账户名相同；添加员工时不输入，则默认为123456"></i>
            </label>
            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-pencil"></i></span>
                <input name="password" type="password" class="form-control" id="password" placeholder="账户密码">
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-6 col-xs-12">
        <div class="form-group">
            <label for="rePassword">
                重复密码
                <i class="fa fa-question-circle i-tooltip hidden-xs" data-toggle="tooltip"
                   data-content="请再次输入密码以确认"></i>
            </label>
            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-pencil"></i></span>
                <input name="rePassword" type="password" class="form-control" id="rePassword" placeholder="重复密码">
            </div>
        </div>
    </div>
</div>